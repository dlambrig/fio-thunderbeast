######################################################################
# Example test for the ceph-osd engine.
# 
# Runs a 4k random write test against an OSD via libosd
#
# NOTE: Make sure you have either a volume named 'fio_test' or change 
#       the ceph_volume parameter.
######################################################################
[global]
ioengine=ceph-osd
ceph_osd_id=0
ceph_conf=/home/ceph-dlambrig/build/ceph.conf
ceph_cluster=ceph
ceph_volume=rbd
invalidate=0	# mandatory
rw=write
bs=64k

[ceph-osd]
runtime=30s
time_based=1
nr_files=1
size=64m
iodepth=32
